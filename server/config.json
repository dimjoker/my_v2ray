{
  "log":{
    "loglevel": "warning"
    //"access": "/var/log/v2ray/access.log",
    //"error": "/var/log/v2ray/error.log"
  },

  "inbounds": [
    {
      "protocol": "vmess",
      "port": "10000-60000",
      "tag": "dynamicPort",
      "settings": {
        "default": {
          "level": 1,
          "alterId": 32
        }
      },
      "allocate": {
        "strategy": "random",
        "concurrency": 2,
        "refresh": 3
      },
      "streamSettings": {
        "network": "mkcp"
      }
    }
  ],

  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {}
    }
  ],

  "dns": {
    "servers": [
      "https+local://1.1.1.1/dns-query",
      "localhost"
    ]
  }
}
